# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/fmis
DB_NAME=fmis

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-use-random-256-bit-key
JWT_EXPIRES_IN=7d

# Logging Configuration
LOG_LEVEL=info

# Backup Configuration
BACKUP_DIR=./backups
ENABLE_AUTO_BACKUP=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# SMTP / Email Configuration (Legacy - use SendGrid instead)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=Farmer Management System <no-reply@example.com>

# SendGrid Email Configuration (Recommended)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
FROM_EMAIL=your_verified_sender@gmail.com
